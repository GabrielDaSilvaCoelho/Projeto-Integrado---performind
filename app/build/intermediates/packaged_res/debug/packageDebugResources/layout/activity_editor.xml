<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E"
    android:padding="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Card: Título do Questionário -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E1E1E"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Título do Questionário"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/etTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Digite o título"
                android:textSize="18sp"
                android:paddingTop="6dp"
                android:background="@drawable/edittext_rounded_bg"/>
        </LinearLayout>

        <!-- Card: Enunciado da Questão -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E1E1E"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginBottom="12dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enunciado da Questão"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"/>

            <EditText
                android:id="@+id/etQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Escreva o enunciado..."
                android:minLines="3"
                android:gravity="top"
                android:paddingTop="6dp"
                android:background="@drawable/edittext_rounded_bg"/>

            <!-- NOVO: tipo de questão -->
            <Switch
                android:id="@+id/switchDiscursiva"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Questão discursiva (sem alternativas)"
                android:textColor="@color/white"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- Card: Alternativas -->
        <LinearLayout
            android:id="@+id/layoutAlternativas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E1E1E"
            android:elevation="4dp"
            android:padding="16dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alternativas"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:layout_marginBottom="12dp"/>

            <EditText
                android:id="@+id/etAlt1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alternativa 1"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_rounded_bg"/>

            <EditText
                android:id="@+id/etAlt2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alternativa 2"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_rounded_bg"/>

            <EditText
                android:id="@+id/etAlt3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alternativa 3"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_rounded_bg"/>

            <EditText
                android:id="@+id/etAlt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Alternativa 4"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittext_rounded_bg"/>

            <EditText
                android:id="@+id/etCorrect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Número da alternativa correta (1-4)"
                android:inputType="number"
                android:background="@android:color/transparent"/>
        </LinearLayout>

        <!-- Botões -->
        <Button
            android:id="@+id/btnProxima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Adicionar Questão"
            android:textAllCaps="false"
            android:backgroundTint="#2196F3"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="12dp"
            android:padding="12dp"
            android:elevation="3dp"/>

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Salvar Questionário"
            android:textAllCaps="false"
            android:backgroundTint="@color/green_700"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:padding="14dp"
            android:elevation="3dp"/>
    </LinearLayout>
</ScrollView>