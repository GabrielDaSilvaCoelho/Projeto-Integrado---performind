<?xml version="1.0" encoding="utf-8"?>
<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Rede (Supabase / streaming) -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Opcional: manter CPU acordada durante playback em background com Service (nÃ£o obrigatÃ³rio se sÃ³ usa Activity) -->
    <!-- <uses-permission android:name="android.permission.WAKE_LOCK" /> -->

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Minhaparte"
        android:usesCleartextTraffic="false"
        tools:targetApi="31">

        <!-- Player (Media3/ExoPlayer) -->
        <activity
            android:name=".PlayerActivity"
            android:exported="false"
            android:supportsPictureInPicture="true"
            android:resizeableActivity="true"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|smallestScreenSize|screenLayout|uiMode">
            <!-- Se quiser permitir abrir vÃ­deos via intent ACTION_VIEW, descomente:
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <data android:mimeType="video/*" />
            </intent-filter>
            -->
        </activity>

        <!-- ðŸ”¹ Tela inicial -->
        <activity
            android:name=".CriarUsuarioActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- ðŸ”¹ Login -->
        <activity
            android:name=".LoginActivity"
            android:exported="true" />
    </application>
</manifest>
