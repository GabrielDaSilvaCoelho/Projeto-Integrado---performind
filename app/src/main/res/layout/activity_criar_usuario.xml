<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E1E">

    <!-- Topo fixo -->
    <LinearLayout
        android:id="@+id/topBar"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:padding="12dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/blue_500">
    </LinearLayout>

    <!-- Conteúdo -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="72dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Tipo de usuário -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de usuário"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Spinner
                android:id="@+id/spTipo"
                android:layout_width="match_parent"
                android:background="@drawable/edittext_rounded_bg"
                android:layout_height="wrap_content" />

            <!-- Nome -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded_bg"
                    />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Matrícula -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Matrícula">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMatricula"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_rounded_bg"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Senha -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Senha">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSenha"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded_bg"
                    android:inputType="textPassword" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Cargo -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cargo">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCargo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded_bg"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Setor -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSetor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Setor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSetor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded_bg"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Supervisor -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSupervisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Supervisor">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSupervisor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_rounded_bg"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- CPF -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CPF">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCpf"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="number"
                    android:background="@drawable/edittext_rounded_bg"/>
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Contato -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contato (telefone/email)"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etContato"
                    android:layout_width="match_parent"
                    android:background="@drawable/edittext_rounded_bg"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botões -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnCancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_500"
                    android:text="Cancelar" />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnSalvar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/blue_500"
                    android:text="Salvar" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
