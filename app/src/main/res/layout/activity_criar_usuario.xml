<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Conteúdo rolável da tela (empurrado para baixo para reservar espaço da barra/topo) -->
    <ScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:padding="16dp"
            android:paddingTop="72dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Tipo de usuário -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tipo de usuário" />

            <Spinner
                android:id="@+id/spTipo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!-- Nome -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nome">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etNome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Matrícula -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Matrícula">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etMatricula"
                    android:inputType="text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Senha -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Senha">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSenha"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Cargo -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Cargo">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCargo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Setor -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSetor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Setor">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSetor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Supervisor (somente para Colaborador) -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilSupervisor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Supervisor (somente para Colaborador)">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etSupervisor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- CPF -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="CPF">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etCpf"
                    android:inputType="number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Contato -->
            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contato (telefone/email)">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/etContato"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </com.google.android.material.textfield.TextInputLayout>

            <!-- Botões -->
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="end"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnCancelar"
                    android:text="Cancelar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <Space
                    android:layout_width="16dp"
                    android:layout_height="wrap_content" />

                <Button
                    android:id="@+id/btnSalvar"
                    android:text="Salvar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Barra superior fixa com dois botões -->
    <LinearLayout
        android:id="@+id/topBar"
        android:orientation="horizontal"
        android:gravity="end|center_vertical"
        android:paddingStart="12dp"
        android:paddingEnd="12dp"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary">

        <Button
            android:id="@+id/btnAbrirPlayer"
            android:text="Abrir Player"
            android:textColor="@android:color/white"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Space
            android:layout_width="12dp"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/btnCriarVideo"
            android:text="Criar Vídeo"
            android:textColor="@android:color/white"
            android:backgroundTint="?attr/colorPrimaryVariant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>
