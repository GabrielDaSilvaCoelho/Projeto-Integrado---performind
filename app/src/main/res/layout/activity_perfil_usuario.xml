<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Título -->
        <TextView
            android:id="@+id/tvTituloPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Resumo do Funcionário"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:layout_marginBottom="16dp" />

        <!-- Card Dados do Usuário -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E1E1E"
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvNome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nome: -"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvMatricula"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Matrícula: -"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvCargo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cargo: -"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvSetor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setor: -"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvCpf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="CPF: -"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Card Estatísticas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1E1E1E"
            android:padding="16dp"
            android:orientation="vertical"
            android:elevation="4dp">

            <TextView
                android:id="@+id/tvQtdRespondidas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perguntas respondidas: 0"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/tvQtdAcertos"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Perguntas corretas: 0"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_marginBottom="16dp" />

            <!-- Divider -->
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#333333"
                android:layout_marginBottom="12dp" />

            <!-- Título do score -->
            <TextView
                android:id="@+id/tvTituloScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Score de desempenho"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp" />

            <!-- Gauge semicircular -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:background="@android:color/transparent">

                <com.example.minhaparte.view.ScoreGaugeView
                    android:id="@+id/gaugeScore"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="16dp"
                    android:background="@android:color/transparent" />

                <!-- Texto central com o valor -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tvScoreValor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:textColor="@android:color/white"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvScoreMax"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/1000"
                        android:textColor="@android:color/darker_gray"
                        android:textSize="14sp" />
                </LinearLayout>

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
